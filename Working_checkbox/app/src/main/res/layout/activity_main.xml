<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uditgurani.com.working_checkbox.MainActivity">

    <TextView
        android:id="@+id/checkintro"
        android:text="Working CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="?android:textAlignment"
        android:textSize="20dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Apple"
        android:layout_below="@+id/checkintro"
        android:text="Apple"
        android:onClick="selectItem"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Mango"
        android:layout_below="@+id/Apple"
        android:text="Mango"
        android:onClick="selectItem"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Banana"
        android:layout_below="@+id/Mango"
        android:text="Banana"
        android:onClick="selectItem"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@id/Banana"
        android:text="Submit"
        android:onClick="finalSelection"
        />

    <TextView
        android:id="@+id/selectedItem"
        android:text="Selected Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="?android:textAlignment"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        />

</RelativeLayout>
